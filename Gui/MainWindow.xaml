<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Gui="clr-namespace:Gui" Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="227*" />
            <RowDefinition Height="84*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="156*" />
            <ColumnDefinition Width="347*" />
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" Height="311" HorizontalAlignment="Left" Name="treeView1"
                  VerticalAlignment="Top" Width="156" Grid.RowSpan="2" ItemsSource="{Binding}" >
            <TreeView.Resources>
                <DataTemplate DataType="{x:Type Gui:Controller}" >
                    <TextBlock Text="{Binding Name}" />                    
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
        <TextBlock Grid.Column="1" Height="84" HorizontalAlignment="Left" Name="textBlock1" Text="TextBlock" VerticalAlignment="Top" Width="347" Grid.Row="1" />
        <StackPanel Grid.Column="1" Height="227" HorizontalAlignment="Left" Name="stackPanel1" VerticalAlignment="Top" Width="347" />
       
    </Grid>
</Window>
